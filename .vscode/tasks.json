{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "cmd",
    "isShellCommand": true,
    "args": ["/C"],
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "webpack",
            "args": [ "webpack" ],
            "isBuildCommand": true
        },
        {
            "taskName": "live-server",
            "args": [ "live-server --watch=bundle.js --no-browser" ]
        }
    ]
}